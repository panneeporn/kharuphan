procedure TPickTime.ComboBox1Change(Sender: TObject);
begin

     if combobox1.Text = '60' then
         begin
              JvDatePickerEdit1.Date  :=  strtodate('01/10/2016');
              JvDatePickerEdit2.Date  :=  strtodate('30/09/2017');

         end;
     if combobox1.Text = '59' then
         begin
              JvDatePickerEdit1.Date  :=  strtodate('01/10/2015');
              JvDatePickerEdit2.Date  :=  strtodate('30/09/2016');
         end;
      if combobox1.Text = '58' then
         begin
              JvDatePickerEdit1.Date  :=  strtodate('01/10/2014');
              JvDatePickerEdit2.Date  :=  strtodate('30/09/2015');
         end;
      if combobox1.Text = '57' then
         begin
              JvDatePickerEdit1.Date  :=  strtodate('01/10/2013');
              JvDatePickerEdit2.Date  :=  strtodate('30/09/2014');
         end;
      if combobox1.Text = '56' then
         begin
              JvDatePickerEdit1.Date  :=  strtodate('01/10/2012');
              JvDatePickerEdit2.Date  :=  strtodate('30/09/2013');
         end;
      if combobox1.Text = '55' then
         begin
              JvDatePickerEdit1.Date  :=  strtodate('01/10/2011');
              JvDatePickerEdit2.Date  :=  strtodate('30/09/2012');
         end;
      if combobox1.Text = '54' then
         begin
              JvDatePickerEdit1.Date  :=  strtodate('01/10/2010');
              JvDatePickerEdit2.Date  :=  strtodate('30/09/2011');
         end;

     // ds1.Caption := FormatThaiDate('dd mmmm eeee',JvDatePickerEdit1.Date);
     // ds2.Caption := FormatThaiDate('dd mmmm eeee',JvDatePickerEdit2.Date);
end;

procedure TPickTime.cxButton1Click(Sender: TObject);
var
cid : string ;
cjoin : string;
djoin : string;
name : string;
num : integer ;
count : integer ;
///// ตัวแปรไปตามคำสั่ง/////
Training : string;
Meeting : string;
Seminar : string;
Observe : string;
D_Training : string;
D_Meeting : string;
D_Seminar : string;
D_Observe : string;
///// ตัวแปรไปเอง/////
Training1 : string;
Meeting1 : string;
Seminar1 : string;
Observe1 : string;
D_Training1 : string;
D_Meeting1 : string;
D_Seminar1 : string;
D_Observe1 : string;
///// ตัวแปรรวมวัน////
allday : string;
allday1 : string;
allcount : string;
allcount1 : string;
h_monny1 : integer;
h_monny2 : integer;

begin

if RadioButton1.Checked = true then
  begin
        ///////////////////////////
          MyQuery4.close;
          MyQuery4.SQL.Text :=

           ' select DISTINCT(h.h_cid),concat(l.u_fname,'+'"'+' '+'"'+',l.u_lname)as name from hrd h'+
           ' LEFT JOIN login l on h.h_cid = l.u_cid '+
           ' where  h.h_datebegin between '+'"'+ formatdatetime('yyyy-mm-dd',JvDatePickerEdit1.Date)+'"'+' and '+'"'+ formatdatetime('yyyy-mm-dd',JvDatePickerEdit2.Date)+'"';
          MyQuery4.open;

          MyQuery8.Execute;
          MyQuery7.Execute;


          num := 1 ;
          count := MyQuery4.RecordCount;
          AdvProgress1.Min := 0;
          AdvProgress1.Max := count;
          AdvProgress1.Position := 0;


          MyQuery4.First;
             while not MyQuery4.Eof do
             begin
              h_monny1 := 0;
              h_monny2 := 0;
              AdvProgress1.Position :=  AdvProgress1.Position + 1;
              Sleep(5);
              cid := myquery4.fieldbyname('h_cid').asstring;
              name := myquery4.fieldbyname('name').asstring;
              /////////////////////////ไปตามคำสั่ง////////////////
              ///////////////////////// จำนวนครั้ง/////////////////
              ////อบรม////
              MyQuery5.Close;
              MyQuery5.SQL.Text := 'SELECT COUNT(h_join)as cjoin FROM hrd WHERE h_training = '+'"'+'ตามคำสั่ง'+'"'+' and '+'h_join = '+'"'+'อบรม'+'"'+' and h_cid = '+'"'+cid+'"'+' and '+' h_datebegin between '+'"'+ formatdatetime('yyyy-mm-dd',JvDatePickerEdit1.Date)+'"'+' and '+'"'+ formatdatetime('yyyy-mm-dd',JvDatePickerEdit2.Date)+'"';
              MyQuery5.open;
              Training := myquery5.fieldbyname('cjoin').asstring;
              ////ประชุม////
              MyQuery5.Close;
              MyQuery5.SQL.Text := 'SELECT COUNT(h_join)as cjoin FROM hrd WHERE  h_training = '+'"'+'ตามคำสั่ง'+'"'+' and '+'h_join = '+'"'+'ประชุม'+'"'+' and h_cid = '+'"'+cid+'"'+' and '+' h_datebegin between '+'"'+ formatdatetime('yyyy-mm-dd',JvDatePickerEdit1.Date)+'"'+' and '+'"'+ formatdatetime('yyyy-mm-dd',JvDatePickerEdit2.Date)+'"';
              MyQuery5.open;
              Meeting := myquery5.fieldbyname('cjoin').asstring;
              ////สัมมนา////
              MyQuery5.Close;
              MyQuery5.SQL.Text := 'SELECT COUNT(h_join)as cjoin FROM hrd WHERE  h_training = '+'"'+'ตามคำสั่ง'+'"'+' and '+'h_join = '+'"'+'สัมมนา'+'"'+' and h_cid = '+'"'+cid+'"'+' and '+' h_datebegin between '+'"'+ formatdatetime('yyyy-mm-dd',JvDatePickerEdit1.Date)+'"'+' and '+'"'+ formatdatetime('yyyy-mm-dd',JvDatePickerEdit2.Date)+'"';
              MyQuery5.open;
              Seminar := myquery5.fieldbyname('cjoin').asstring;
              ////ดูงาน////
              MyQuery5.Close;
              MyQuery5.SQL.Text := 'SELECT COUNT(h_join)as cjoin FROM hrd WHERE  h_training = '+'"'+'ตามคำสั่ง'+'"'+' and '+'h_join = '+'"'+'ดูงาน'+'"'+' and h_cid = '+'"'+cid+'"'+' and '+' h_datebegin between '+'"'+ formatdatetime('yyyy-mm-dd',JvDatePickerEdit1.Date)+'"'+' and '+'"'+ formatdatetime('yyyy-mm-dd',JvDatePickerEdit2.Date)+'"';
              MyQuery5.open;
              Observe := myquery5.fieldbyname('cjoin').asstring;

              ///////คำนวนเงิน///////

              MyQuery5.Close;
              MyQuery5.SQL.Text := 'SELECT sum(h_monny)as monny FROM hrd WHERE  h_training = '+'"'+'ตามคำสั่ง'+'"'+' and h_cid = '+'"'+cid+'"'+' and '+' h_datebegin between '+'"'+ formatdatetime('yyyy-mm-dd',JvDatePickerEdit1.Date)+'"'+' and '+'"'+ formatdatetime('yyyy-mm-dd',JvDatePickerEdit2.Date)+'"';
