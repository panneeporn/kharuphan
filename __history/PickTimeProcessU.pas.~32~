                   D_Seminar1 := '0';
                end ;
              if Observe1 = '0'  then
                begin
                //   Observe1 := '0' ;
                   D_Observe1 := '0' ;
                end ;

            ///////รวมจำนวนครั้งไปตามคำสั่ง ////

              allcount := inttostr((strtoint(Training))+ (strtoint(Meeting))+(strtoint(Seminar))+(strtoint(Observe)));
             ///////รวมจำนวนวันไปตามคำสั่ง ////

              allday := inttostr((strtoint(D_Training))+ (strtoint(D_Meeting))+(strtoint(D_Seminar))+(strtoint(D_Observe)));
             ///////รวมจำนวนครั้งไปเอง ////

              allcount1 := inttostr((strtoint(Training1))+ (strtoint(Meeting1))+(strtoint(Seminar1))+(strtoint(Observe1)));
              ///////รวมจำนวนวันไปเอง ////

              allday1 := inttostr((strtoint(D_Training1))+ (strtoint(D_Meeting1))+(strtoint(D_Seminar1))+(strtoint(D_Observe1)));





             MyQuery6.Close;
             MyQuery6.Open;
             MyQuery6.Append;
             MyQuery6.FieldByName('cid').AsString := cid;
             MyQuery6.FieldByName('name').AsString := name;
             MyQuery6.FieldByName('training').Asinteger := strtoint(Training);
             MyQuery6.FieldByName('meeting').Asinteger := strtoint(Meeting);
             MyQuery6.FieldByName('seminar').Asinteger := strtoint(Seminar);
             MyQuery6.FieldByName('observe').Asinteger := strtoint(Observe);

             MyQuery6.FieldByName('d_training').Asinteger := strtoint(D_Training);
             MyQuery6.FieldByName('d_meeting').Asinteger := strtoint(D_Meeting);
             MyQuery6.FieldByName('d_seminar').Asinteger := strtoint(D_Seminar);
             MyQuery6.FieldByName('d_observe').Asinteger := strtoint(D_Observe);

             MyQuery6.FieldByName('training1').Asinteger := strtoint(Training1);
             MyQuery6.FieldByName('meeting1').Asinteger := strtoint(Meeting1);
             MyQuery6.FieldByName('seminar1').Asinteger := strtoint(Seminar1);
             MyQuery6.FieldByName('observe1').Asinteger := strtoint(Observe1);

             MyQuery6.FieldByName('d_training1').Asinteger := strtoint(D_Training1);
             MyQuery6.FieldByName('d_meeting1').Asinteger := strtoint(D_Meeting1);
             MyQuery6.FieldByName('d_seminar1').Asinteger := strtoint(D_Seminar1);
             MyQuery6.FieldByName('d_observe1').Asinteger := strtoint(D_Observe1);

             MyQuery6.FieldByName('allday1').Asinteger := strtoint(allday1);
             MyQuery6.FieldByName('allday').Asinteger := strtoint(allday);
             MyQuery6.FieldByName('allcount1').Asinteger := strtoint(allcount1);
             MyQuery6.FieldByName('allcount').Asinteger := strtoint(allcount);
             MyQuery6.FieldByName('h_monny1').Asinteger := h_monny1;
             MyQuery6.FieldByName('h_monny2').Asinteger := h_monny2;

             MyQuery6.Post;



             MyQuery4.Next;




            end;

   MyQuery9.close;
   MyQuery9.Open;


   ds1 := frxReport2.FindObject('ds1') as TfrxMemoView;
       ds2 := frxReport2.FindObject('ds2') as TfrxMemoView;
       ds1.Text := StringReplace(label4.caption, '%my_str%', 'new string', [rfReplaceAll]);
       ds2.Text := StringReplace(label5.caption, '%my_str%', 'new string', [rfReplaceAll]);
       frxReport2.PrepareReport;
       frxReport2.ShowReport;




//////////////////////////
  end;

if RadioButton2.Checked = true then
  begin

  end;

if RadioButton3.Checked = true then
  begin
       MyQuery1.Close;
       MyQuery1.SQL.Text :=  ' select *,CONCAT(u_fname,'+'"'+'  '+'"'+',u_lname)as fullname from hrd '+
          ' LEFT JOIN login on hrd.h_cid = login.u_cid '+
          ' where h_recdate between '+'"'+ formatdatetime('yyyy-mm-dd',
             JvDatePickerEdit1.Date)+'"'+' and '+'"'+ formatdatetime('yyyy-mm-' +
             'dd',JvDatePickerEdit2.Date)+'"';
       MyQuery1.Open;

       ds1 := frxReport1.FindObject('ds1') as TfrxMemoView;
       ds2 := frxReport1.FindObject('ds2') as TfrxMemoView;
       ds1.Text := StringReplace(label4.caption, '%my_str%', 'new string', [rfReplaceAll]);
       ds2.Text := StringReplace(label5.caption, '%my_str%', 'new string', [
          rfReplaceAll]);
       frxReport1.PrepareReport;
       frxReport1.ShowReport;
  end;













end;

