procedure TRegisHRD.cxButton4Click(Sender: TObject);
VAR
ButtonSelected : Integer;
begin
  if cxDBLabel2.Caption = 'Y' then
      begin
        ShowMessage('ระบบได้ยืนยันข้อมูลเรียบร้อยแล้ว กรุณาติดต่อ ADMIN');
      end;
  if cxDBLabel2.Caption = 'N' then
      begin
          ButtonSelected := MessageDlg('คุณต้องการลบคำร้องขอ HRD',mtError,mbOKCancel,0);
          if ButtonSelected  = mrOK then
            begin
                MyQuery9.Close;
                MyQuery9.SQL.Text := 'delete from write_hrd where h_id='+'"'+cxDBLabel1.Caption+'"';
                MyQuery9.Execute;
                MyQuery2.Refresh;

            end;


      end;
end;

