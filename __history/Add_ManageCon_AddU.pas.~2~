procedure TAdd_ManageCon_Add.FormShow(Sender: TObject);
begin
if ManageCon_Add_C.label3.Caption = 'Confirm' then
    begin
         label2.Caption :='ยืนยันข้อมูล';
    end;
if ManageCon_Add_C.label3.Caption = 'Protect' then
    begin
         label2.Caption := 'ปกปิดข้อมูล' ;
    end;

end;

