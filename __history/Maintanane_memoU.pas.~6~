procedure TMaintanance_memo.FormShow(Sender: TObject);
begin
DBEdit1.Enabled := False ;
   if Tachnician.edit1.Text = '1' then
       begin
             Edit1.Text := 'ช่าง ::'
       end;
    if Tachnician.edit1.Text = '2' then
       begin
             Edit1.Text := 'พัสดุ ::'
       end;


